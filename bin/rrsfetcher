#!/usr/bin/env ruby

$:.unshift File.expand_path(File.dirname(__FILE__)+"/../lib/")

require 'rrs_fetcher'
require 'rrs_parser'

require 'rubygems'
require 'hpricot'
require 'net/http'
require 'uri'
require 'progressbar'


downloader = RRSFetcher.new

if ARGV[0]
  downloader.add_download(ARGV[0])

  downloader.start_dowload
end
